<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HeroesManual.HealthcareLearnPage"
    Title="Learn More">

    <Grid >
     
        <Button x:Name="btnGeneralInfo"
            Text="General Information"
            Clicked="btnGeneralInfo_Clicked"
            ContentLayout="Top,-15" 
            BackgroundColor="White"
            TextColor="#40806a"
            Font="Bold,20"
            BorderColor="Black"
            BorderWidth="1"
            BorderRadius="5"
            Margin="10"
            Grid.Row="0"
            Grid.Column="0" />
        
        <Button x:Name="btnVictimInfo"
            Text="What It's Like to Be a Victim"
            Clicked="btnVictimInfo_Clicked"
            ContentLayout="Top,-15" 
            BackgroundColor="White"
            TextColor="#40806a"
            Font="Bold,20"
            BorderColor="Black"
            BorderWidth="1"
            BorderRadius="5"
            Margin="10"
            Grid.Row="1"/>
        
        <Button x:Name="btnPerpInfo"
            Text="What It's Like to Be a Perpetrator"
            Clicked="btnPerpInfo_Clicked"
            ContentLayout="Top,-15" 
            BackgroundColor="White"
            TextColor="#40806a"
            Font="Bold,20"
            BorderColor="Black"
            BorderWidth="1"
            BorderRadius="5"
            Margin="10"
            Grid.Row="2"/>
        
        <Button Text="Safety Plan"
            ContentLayout="Left" 
            BackgroundColor="White"
            TextColor="#40806a"
            Font="Bold,20"
            BorderColor="Black"
            BorderWidth="1"
            BorderRadius="5"
            Margin="10"
            Grid.Row="3"
            Grid.Column="0"
            Clicked="safetyPlanButton_Clicked"/>
        
        <Button Text="Communication Resources"
            ContentLayout="Left" 
            BackgroundColor="White"
            TextColor="#40806a"
            Font="Bold,20"
            BorderColor="Black"
            BorderWidth="1"
            BorderRadius="5"
            Margin="10"
            Grid.Row="4"
            Grid.Column="0"
            Clicked="communicationResourcesButton_Clicked"/>
        
        <Button Text="Screening Resources"
            ContentLayout="Left" 
            BackgroundColor="White"
            TextColor="#40806a"
            Font="Bold,20"
            BorderColor="Black"
            BorderWidth="1"
            BorderRadius="5"
            Margin="10"
            Grid.Row="2"
            Grid.Column="0"
            Clicked="screeningResourcesButton_Clicked"/>
    </Grid>
    
</ContentPage>
