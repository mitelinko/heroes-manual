<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HeroesManual.ScreeningPage" 
             Title="Screening and Assessment">
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                
                <Label Margin="10,10,0,0" Text= "First Impressions"  Font="Bold,16"/>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="25,0,10,0" Text= "&#x2022;"/>
                    <Label Margin="0,0,10,0" Text= "Is there someone in the room who might be a perpetrator?"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="25,0,10,0" Text= "&#x2022;"/>
                    <Label Margin="0,0,10,0" Text= "Reason for visit: injusry, physical complaint, etc"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="25,0,10,0" Text= "&#x2022;"/>
                    <Label Margin="0,0,10,0" Text= "Does the patient show signs of physical abuse?"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="50,0,10,0" Text= "-"/>
                    <Label Margin="0,0,10,0" Text= "Black eyes"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="50,0,10,0" Text= "-"/>
                    <Label Margin="0,0,10,0" Text= "Bruises around the neck"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="50,0,10,0" Text= "-"/>
                    <Label Margin="0,0,10,0" Text= "Sprained wrists"/>
                </StackLayout>
                


                <Label Margin="10,10,0,0" Text= "During Routine Questions"  Font="Bold,16"/>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="25,0,10,0" Text= "&#x2022;"/>
                    <Label Margin="0,0,10,0" Text= "Do they look to their partner for permission/confirmation?"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="25,0,10,0" Text= "&#x2022;"/>
                    <Label Margin="0,0,10,0" Text= "Do they have low self esteem? Do they show signs of self-neglect?"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="25,0,10,0" Text= "&#x2022;"/>
                    <Label Margin="0,0,10,0" Text= " Do they make excuses that don't match up like tripping or being clumsy to account for their injuries?"/>
                </StackLayout>



                <Label Margin="10,10,0,0" Text= "Confirmation Questions"  Font="Bold,16"/>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="25,0,10,0" Text= "&#x2022;"/>
                    <Label Margin="0,0,10,0" Text= "Remove any third party if possible before starting" Font="Bold"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="50,0,10,0" Text= "-"/>
                    <Label Margin="0,0,10,0" Text= "&quot;Ma'am/Sir, would you mind stepping outside for just a second? I have a few confidential questions I'd like to ask [patient name].&quot;"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="25,0,10,0" Text= "&#x2022;"/>
                    <Label Margin="0,0,10,0" Text= "&quot;Do you have lots of stress in your life?&quot;"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="25,0,10,0" Text= "&#x2022;"/>
                    <Label Margin="0,0,10,0" Text= "&quot;How are things at home?&quot;"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="25,0,10,0" Text= "&#x2022;"/>
                    <Label Margin="0,0,10,0" Text= "&quot;How are things at work?&quot;"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="25,0,10,0" Text= "&#x2022;"/>
                    <Label Margin="0,0,10,0" Text= "&quot;Because difficult relationships can cause health problems, we are asking all of our patients the following question: Does a partner, or anyone at home, hurt, hit or threaten you?&quot;"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="50,0,10,0" Text= "-"/>
                    <Label Margin="0,0,10,0" Text= "&quot;Do you feel safe in your relationship?&quot;"/>
                </StackLayout>


                <Label Margin="10,10,0,0" Text= "If they say yes:"  Font="Bold,16"/>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="25,0,10,0" Text= "&#x2022;"/>
                    <Label Margin="0,0,10,0" Text= "Every conversation is different. Don't blame the victim for not leaving. Keep them talking."/>
                </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Margin="50,0,10,0" Text= "-"/>
                    <Label Text= "&quot;Thank you for telling me - I know it was difficult to do.&quot;"/>
                    </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="25,0,10,0" Text= "&#x2022;"/>
                    <Label Margin="0,0,10,0" Text= "Be supportive."/>
                </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Margin="50,0,10,0" Text= "-"/>
                    <Label Margin="0,0,10,0" Text= "&quot;It's not your fault. You are not to blame.&quot;"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Margin="50,0,10,0" Text= "-"/>
                    <Label Margin="0,0,10,0" Text= "&quot;There are people that can help you.&quot;"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Margin="50,0,10,0" Text= "-"/>
                    <Label Margin="0,0,10,0" Text= "&quot;Do you have family or friends that can help you?&quot;"/>
                    </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="25,0,10,0" Text= "&#x2022;"/>
                    <Label Margin="0,0,10,0" Text= "Show empathy."/>
                </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Margin="50,0,10,0" Text= "-"/>
                    <Label Margin="0,0,10,0" Text= "&quot;I believe you.&quot;"/>
                    </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="50,0,10,0" Text= "-"/>
                    <Label Margin="0,0,10,0" Text= "&quot;I understand how difficult it is to change this situation. It may take some time to figure out what to do.&quot;"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="25,0,10,0" Text= "&#x2022;"/>
                    <Label Margin="0,0,10,0" Text= "Discuss, review, and stress the importance of the safety plan with the patient."/>
                </StackLayout>
                <Button Text="Safety Plan" ContentLayout="Left,-15"  BackgroundColor="White" TextColor="#40806a" Font="Bold,20" BorderColor="Black" BorderWidth="1" BorderRadius="5" Margin="10"  Clicked="Button_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>